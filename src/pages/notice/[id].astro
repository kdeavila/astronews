---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/Button.astro";
import { notices } from "../../services/notices.js";

const { id } = Astro.params;
const notice = notices[id - 1];

export async function getStaticPaths() {
  return notices.map((notice) => ({
    params: { id: notice.id },
  }));
}
---

<Layout title={notices[id - 1]?.title}>
  <Navbar />

  <!-- Notice section -->
  <main>
    <section class="flex flex-col items-center mx-auto mb-10 max-w-4xl">

        
      <div
        class="w-full h-96 rounded-md overflow-hidden border-2 border-[rgb(63,22,73)] hover:border-[#AB00D6] duration-300 mb-10 hover:rotate-1"
      >
        <img
          class="w-full h-full block object-cover scale-110 hover:scale-100 duration-300 ease-in-out"
          src={notice.src}
          alt={notice.title}
        />
      </div>

      <div>
        <h1 class="text-4xl font-semibold mb-4">{notice.title}</h1>
        <p class="text-gray-300 text-lg text-justify mb-6">{notice.description}</p>
        <span class="text-[#565656] text-sm italic">Date: {notice.date}</span>
      </div>

      <Button title="Volver" href="/#noticias" />
    </section>
  </main>

  <Footer />
</Layout>
