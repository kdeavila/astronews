---
interface Props {
  title: string;
}
const { title } = Astro.props;
import "@fontsource-variable/figtree";
import Navbar from "../components/Navbar.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Periódico para conocer los más recientes lanzamientos de SpaceX"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="w-full bg-[#07000B]">
    <div
      class="fixed top-0 right-0 h-screen w-screen bg-[#07000B] bg-[radial-gradient(ellipse_70%_40%_at_0%_-20%,rgba(142,82,188,0.3),rgba(255,255,255,0))] -z-10"
    >
    </div>

    <div
      class="fixed bottom-0 left-[-40%] size-[350px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,196,.08),rgba(255,255,255,0))] -z-10"
    >
    </div>
  </body>
  <Navbar />

  <slot />
  <script src="../js/app.js"></script>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    font-family: "Figtree Variable", sans-serif;
    color-scheme: light dark;
  }
</style>
