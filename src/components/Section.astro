---
interface SectionProps {
  id: string;
  title: string;
  description: string;
}

const { id, title, description } = Astro.props as SectionProps;
---

<section id={id} class="px-8 mb-20">
  <div class="flex items-center gap-2">
    <slot name="icon" class="size-4" />
    <h1 class="font-bold text-2xl">{title}</h1>
  </div>
  <p class="text-sm text-neutral-50/60">{description}</p>

  <article class="mt-10">
    <slot />
  </article>

</section>
