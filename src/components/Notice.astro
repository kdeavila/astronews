---
const { title, src, desc, href } = Astro.props;
---

<a
  href={href}
  class="w-full h-full bg-[#0b0b0b] flex flex-col items-center justify-center rounded-md border-2 border-[#3f164900] hover:border-[#AB00D6] group duration-300 p-6"
>
  <div class="w-full overflow-hidden">
    <img
      class="w-full h-52 block object-cover scale-110 group-hover:scale-100 duration-300 ease-in-out"
      src={src}
      alt={title}
    />
  </div>
  <h3 class="text-xl font-semibold lg:text-2xl mt-4">{title}</h3>

  <div
    class="w-full text-[#d7cbdd] text-base text-ellipsis overflow-hidden whitespace-nowrap"
  >
    {desc}
  </div>
</a>
