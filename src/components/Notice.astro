---
//Código JavaScript
const { title, src, description, href } = Astro.props;
import Button from "./Button.astro";
---

<article class="w-full h-full flex flex-col items-center justify-center gap-2">
    <h3 class="text-lg font-semibold md:text-xl lg:text-2xl">{title}</h3>

    <div class="w-full rounded-md overflow-hidden border-2 border-[#3f1649] hover:border-[#AB00D6] duration-300">
        <img class="w-full h-52 block object-cover scale-110 hover:scale-100 duration-300 ease-in-out" src={src} alt={title}>
    </div> 

    <p class="w-11/12 text-[#d7cbdd] text-xs text-balance">{description}</p>

    <Button href={href} title="Leer más"/>
</article>